<h1>Editing Book</h1>

<!--バリデーションのエラー文表示-->
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  
  <h3>Title</h3>
  <%= f.text_field :title %>
  
  <h3>Body</h3>
  <%= f.text_area :body %>
  
  <p><%= f.submit 'Update Book' %></p>
<% end %>

<p>
  <%= link_to("Show", book_path(@book.id)) %> 
  <%= "|" %>
  <%= link_to("Back","/books") %>
</p>