<h1>Editing Book</h1>
<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
  
  <h3>Title</h3>
  <%= f.text_field :title %>
  
  <h3>Body</h3>
  <%= f.text_area :body %>
  
  <p><%= f.submit 'Update Book' %></p>
<% end %>

<p>
  <%= link_to("Show", book_path(@book.id)) %> 
  <%= "|" %>
  <%= link_to("Back","/books") %>
</p>